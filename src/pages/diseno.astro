---
import Page from "../layouts/Page.astro";
import { Image } from "astro:assets";
import disenoTitle from "../assets/resources/titles/diseno.svg";
import DisenoDesktop from "../components/DisenoDesktop.astro";
import DisenoMobile from "../components/DisenoMobile.astro";

const pageTitle = "Portfolio de diseño de Lluís Sallés - Proyectos y trabajos";
const pageDescription =
  "Portfolio profesional con proyectos de branding, identidad corporativa y diseño para marcas nacionales e internacionales.";
const pageKeywords = "portfolio diseño, branding, identidad corporativa, diseño gráfico, proyectos comerciales";
---

<Page title={pageTitle} description={pageDescription} keywords={pageKeywords}>
  <div class="content">
    <h1>
      <Image src={disenoTitle} alt="Diseño y portfolio Lluís Sallés" class="page-title-svg" />
    </h1>

    <div id="desktop-content" style="display: none;">
      <DisenoDesktop />
    </div>
    <div id="mobile-content">
      <DisenoMobile />
    </div>
  </div>
</Page>

<script>
  function handleView() {
    const desktopContent = document.getElementById("desktop-content");
    const mobileContent = document.getElementById("mobile-content");
    const isMobile = window.innerWidth <= 575;

    if (desktopContent && mobileContent) {
      desktopContent.style.display = isMobile ? "none" : "flex";
      mobileContent.style.display = isMobile ? "flex" : "none";
    }
  }

  handleView();
  window.addEventListener("resize", handleView);
</script>

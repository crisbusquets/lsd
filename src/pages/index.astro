<style>
  .content-video {
    margin: 0;
  }
  @media (max-width: 768px) {
    .content-video {
      margin: var(--section-lateral-padding) 0;
    }
  }
  .silhouette {
    display: none;
  }
  @media (max-width: 768px) {
    .silhouette {
      display: block;
      text-align: center;
      position: relative;
    }
  }
</style>

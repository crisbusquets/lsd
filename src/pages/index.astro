---
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";

const pageTitle = "Lluís Sallés Diego - Docente, investigador y especialista en Branding";
const pageDescription =
  "Doctor en Literatura, escritor y docente en Elisava UVic. Especialista en branding, narrativa de marca y design thinking con más de 25 años de experiencia en consultoría estratégica.";
const pageKeywords =
  "Lluís Sallés, branding, naming, storytelling, design thinking, docencia universitaria, investigación, Elisava";
---

<Layout title={pageTitle} description={pageDescription} keywords={pageKeywords}>
  <Hero />

  <div class="content-video">
    <video width="100%" height="auto" controls autoplay loop preload="auto" playsinline>
      <source src="../../public/video/lsd-video-loop.mp4" type="video/mp4" />
      <source src="../../public/video/lsd-video-loop.webm" type="video/webm" />
      Tu navegador no da soporte a vídeos.
    </video>
  </div>
</Layout>

<style>
  .content-video {
    width: 100%;
    height: auto;
    margin: 0;
  }
</style>

---
import Navigation from "./Navigation.astro";
import { Image } from "astro:assets";
import signature from "../assets/resources/titles/lluis-salles-signature.svg";
import silhouette from "../assets/resources/ui/lluis-salles-silhouette-v2.svg";
import indiana from "../assets/resources/ui/encaputxat.png";
---

<div class="lateral">
  <header>
    <a href="/">
      <Image src={signature} alt="Lluís Sallés" class="logo" />
    </a>

    <Navigation />
  </header>

  <div class="silhouette">
    <Image src={silhouette} alt="" />
  </div>

  <div class="indiana">
    <Image src={indiana} alt="" />
  </div>
</div>

<style>
  header {
    position: fixed;
  }

  @media (max-width: 768px) {
    header {
      display: flex;
      position: relative;
    }
  }

  .indiana {
    display: none;
  }

  .silhouette {
    position: fixed;
    bottom: 0;
    z-index: 99;
  }

  .silhouette:hover ~ .indiana {
    position: fixed;
    display: flex;
    align-items: center;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 1;
  }

  .silhouette:hover ~ .indiana img {
    width: 100%;
    height: auto;
  }

  @media (max-width: 768px) {
    .silhouette {
      bottom: 0;
      left: 50%;
      margin: 32px 0 0;
      transform: translate(-50%);
      z-index: -1;
    }
  }
</style>

---
const { pathname } = Astro.url;
---

<nav>
  <button class="toggle" aria-label="Toggle navigation" aria-expanded="false" aria-controls="main-menu">
    <span class="menu-icon">üçî</span>
    <span class="close-icon">‚ùå</span>
  </button>

  <ul id="main-menu" class="nav-menu">
    <li><a href="/quienesel" class:list={["nav-link", { active: pathname === "/quienesel" }]}>¬øQui√©n es √©l?</a></li>
    <li>
      <a href="/publicaciones" class:list={["nav-link", { active: pathname === "/publicaciones" }]}>Publicaciones</a>
    </li>
    <li><a href="/docencia" class:list={["nav-link", { active: pathname === "/docencia" }]}>Docencia</a></li>
    <li>
      <a href="/conferencias" class:list={["nav-link", { active: pathname === "/conferencias" }]}>Conferencias</a>
    </li>
    <li><a href="/diseno" class:list={["nav-link", { active: pathname === "/diseno" }]}>Dise√±o</a></li>
    <li><a href="/contacto" class:list={["nav-link", { active: pathname === "/contacto" }]}>Contacto</a></li>
  </ul>
</nav>

<style>
  body.menu-open {
    overflow: hidden;
    position: fixed;
    width: 100%;
  }

  nav ul {
    font-size: var(--text-sm);
    margin-bottom: var(--space-md);
    list-style: none;
    line-height: 1.3;
  }

  nav ul li {
    padding-bottom: var(--space-md);
  }

  a {
    text-decoration: underline;
    transition: all 0.3s;
    color: var(--color-text-primary);
  }

  a:hover {
    text-decoration: none;
  }

  a.active {
    font-style: italic;
    font-weight: bold;
  }

  .toggle {
    display: none;
    padding: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1000;
    position: relative;
  }

  .menu-icon,
  .close-icon {
    font-size: var(--text-xl);
  }

  .close-icon {
    display: none;
  }

  [aria-expanded="true"] .menu-icon {
    display: none;
  }

  [aria-expanded="true"] .close-icon {
    display: inline;
    right: 16px;
    position: inherit;
    top: -8px;
  }

  @media (max-width: 768px) {
    .toggle {
      display: block;
    }

    .nav-menu {
      display: flex;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: var(--color-text-primary);
      z-index: 999;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      opacity: 0;
      visibility: hidden;
      height: var(--layout-height-full);
      transition:
        opacity 0.3s ease,
        visibility 0.3s ease;
    }

    .nav-menu.show {
      opacity: 1;
      visibility: visible;
    }

    .nav-link {
      font-size: 1.5rem;
      padding: 1rem 0;
      opacity: 0;
      color: var(--color-background);
      transform: translateY(20px);
      transition:
        opacity 0.3s ease,
        transform 0.3s ease;
    }

    .nav-menu.show .nav-link {
      opacity: 1;
      transform: translateY(0);
    }

    .nav-menu.show .nav-link:nth-child(1) {
      transition-delay: 0.1s;
    }
    .nav-menu.show .nav-link:nth-child(2) {
      transition-delay: 0.2s;
    }
    .nav-menu.show .nav-link:nth-child(3) {
      transition-delay: 0.3s;
    }
    .nav-menu.show .nav-link:nth-child(4) {
      transition-delay: 0.4s;
    }
    .nav-menu.show .nav-link:nth-child(5) {
      transition-delay: 0.5s;
    }
    .nav-menu.show .nav-link:nth-child(6) {
      transition-delay: 0.6s;
    }
    .nav-menu.show .nav-link:nth-child(7) {
      transition-delay: 0.7s;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.querySelector(".toggle");
    const menu = document.querySelector(".nav-menu");
    const mediaQuery = window.matchMedia("(min-width: 768px)");

    function toggleMenu() {
      const isExpanded = toggle.getAttribute("aria-expanded") === "true";
      toggle.setAttribute("aria-expanded", !isExpanded);
      menu.classList.toggle("show");
      document.body.classList.toggle("menu-open");
    }

    function handleResize(e) {
      if (e.matches) {
        menu.classList.remove("show");
        toggle.setAttribute("aria-expanded", "false");
        document.body.classList.remove("menu-open");
      }
    }

    toggle.addEventListener("click", toggleMenu);
    mediaQuery.addListener(handleResize);
  });
</script>
